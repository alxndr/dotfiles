unalias gco # oh-my-zsh aliases this
      gco() {
        if [[ "$1" = "." ]]; then
          echo "\t*************"
          echo "\t** Danger! **"
          echo "\t*************"
          echo -n "REALLY \`git checkout .\` ?? that's sorta like \`git reset --hard HEAD\`... [N/y]: "
          read BOOL_CONTINUE
          if echo "$BOOL_CONTINUE" | grep -iq "^y"; then
            git checkout "$1"
          else
            echo "Cancelling..."
            return 1
          fi
        else
          git checkout "$1"
        fi
      }
