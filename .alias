      decode_jwt() {
        if [[ -n "$1" ]]; then
          JWT=$1
        else
          read JWT
        fi
        JWT_SPLIT=(${(s:.:)JWT}) # split on periods
        for JWT_PIECE in $JWT_SPLIT; do
          echo
          echo $JWT_PIECE | base64 -D
          echo
        done
      }
