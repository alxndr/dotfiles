      docker-scrub() {
        docker rm $(docker ps -q -f 'status=exited')
        docker rmi $(docker images -f "dangling=true" -q)
        docker volume rm $(docker volume ls -qf dangling=true)
        docker image prune
        docker container prune
        docker volume prune
      }

